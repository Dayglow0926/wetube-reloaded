extends base.pug

block content 
    h4 Change Title of video
    form(method="POST") 
        input(name="title", type="text", placeholder="Video Title" value=video.title)
        input(placeholder="Description", required, type="text", value=video.description)
        input(placeholder="Hashtags separated by comma.", required, type="text", value=video.hashtags.join())
        input(type="submit", value="Save")